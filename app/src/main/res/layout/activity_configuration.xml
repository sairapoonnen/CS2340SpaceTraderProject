<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ConfigurationActivity"
    >


    <EditText
        android:id="@+id/player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_header"
        android:text="Input Character Name"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_header"
        android:text="Character Name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <Spinner
        android:id="@+id/difficultySpinner"
        android:layout_width="395dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="431dp" />

    <TextView
        android:id="@+id/game_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Game Difficulty"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="onCreatePressed"
        android:text="Create"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="656dp" />

</android.support.constraint.ConstraintLayout>