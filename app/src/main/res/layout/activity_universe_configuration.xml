<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.UniverseConfigurationActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="25dp"
        android:text="Generating random start planet..."
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onNextPressed"
        android:text="Next"
        android:background="@color/LemonChiffon"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="594dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="236dp"
        android:layout_height="186dp"
        app:srcCompat="@drawable/planet"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="281dp" />

</android.support.constraint.ConstraintLayout>